{
    "name": "apimatic/reloadlysdk",
    "type": "library",
    "keywords": [
        "reloadly-sdk",
        "API",
        "SDK"
    ],
    "homepage": "https://www.reloadly.com",
    "license": "MIT",
    "authors": [
        {
            "name": "Reloadly Developers",
            "email": "developers@reloadly.com",
            "homepage": "https://www.reloadly.com"
        }
    ],
    "require": {
        "php": ">=7.2 <8.2",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "apimatic/unirest-php": "^3.0.1",
        "apimatic/jsonmapper": "^3.0.4"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.5",
        "phan/phan": "5.3.1"
    },
    "autoload": {
        "psr-4": {
            "ReloadlySdkLib\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ReloadlySdkLib\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "lint": "phpcs --standard=phpcs-ruleset.xml src/",
        "lint-fix": "phpcbf --standard=phpcs-ruleset.xml src/",
        "analyze": "phan --allow-polyfill-parser"
    }
}